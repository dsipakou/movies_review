		<tr>
			<td class="index-page-td-with-border">
				<div class="index-page-movie-desc">
					<table>
						<tr>
							<td class="top">
								<%= raw(post.content) %>
							</td>
						</tr>
						<tr>
							<td class="bottom half">
								<footer>
									Написал <%= User.find(post.user_id).nickname %> <%= post.created_at.to_formatted_s(:short) %> <i>&nbsp; &nbsp;<%= link_to raw("Комментариев #{get_all_post_comments_amount(post)} | #{get_new_post_comments_amount(post)}"), post_comments_path(post.id)%></i>
								</footer>		
							</td>
						</tr>
					</table>
				</div>
			</td>
		</tr>
		<tr>
			<td></td>
		</tr>
		<% end %> <% end %>
	</table>
