<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.nickname %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user %></td>
        <td>
        <% if can? :destroy, user %>
          <%= link_to 'Edit', edit_user_path(user) %></td>  
        <% end %>
        <td>
          <% if can? :destroy, user %>
            <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>  
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


