<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th><%= t(".username") %></th>
      <th><%= t(".nickname") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.nickname %></td>
        <td><%= link_to t("general.crud.show"), user %></td>
        <td>
        <% if can? :destroy, user %>
          <%= link_to t("general.crud.edit"), edit_user_path(user) %></td>  
        <% end %>
        <td>
          <% if can? :destroy, user %>
            <%= link_to t("general.crud.delete"), user, method: :delete, data: { confirm: t("general.crud.delete_confirm") } %>  
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>