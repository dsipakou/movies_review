<header class="header">
	<section class="header-content">
		<ul class="header-user-nav header-nav">
			<li><%= link_to User.find(session[:userid]).nickname, user_path(User.find(session[:userid])) %></li>
			<li><strong><%= link_to t("general.header.logout"), logout_path %></strong></li>
		</ul>
		<div class="header-logo"><%= link_to (image_tag ('small-logo.png')), index_path, class: "logo" %></div>
		<div class="header-search">
			<%= render 'main/search_form' %>
		</div>
		<ul class="header-site-nav header-nav">
			<li><strong><%= link_to t("general.header.new_movie"), new_movie_path %></strong></li>
		</ul>
	</section>
</header>